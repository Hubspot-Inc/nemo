<%# If this is a multilevel fragment, we are supposed to render just one of the subqings. %>
<% if node.multilevel_fragment? %>
  <%= node.sorted_children[0].body_tags(group: node, xpath_prefix: xpath) %>
<% else %>
  <%= node.grid_label_row(xpath_prefix: xpath) %>
  <% node.sorted_children.each do |child| %>
    <%= child.body_tags(group: node, render_mode: node.render_as_grid? ? :grid : :normal, xpath_prefix: xpath) %>
  <% end %>
<% end %>
