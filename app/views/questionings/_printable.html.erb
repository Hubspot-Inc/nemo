<tr class="question <%= "depth-#{qing.depth}" %><%= qing.condition ? ' conditional' : '' %>">
  <td class="name">
    <% if qing.display_conditionally?%>
      <div class="condition">
        <%= t("question.answer_only_caps") %>
        <%= qing.decorate.concatenated_conditions %></div>
    <% end %>
    <div class="name">
      <%= qing.full_dotted_rank %>. <%= reqd_sym if qing.required? %>
      <%= qing.question.name %>
    </div>
    <% unless qing.question.hint.blank? %>
      <div class="hint"><%= qing.question.hint %></div>
    <% end %>
  </td>
  <td class="answer <%= qing.qtype_name %>_answer">
    <% # print options if necessary %>
    <% if qing.has_options? %>
      <% qing.options.each do |opt| %>
        <div class="option">
          <div class="option_box"></div>
          <%= opt.name %>
        </div>
      <% end %>
    <% else %>
      <div class="answer_box"></div>
    <% end %>
  </td>
</tr>
