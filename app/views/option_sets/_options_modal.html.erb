<% unless read_only || @option_set.huge? %>
  <div class="modal fade edit-named-item" id="edit-option" tabindex="-1"
    role="dialog" aria-labelledby="editOption" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"></h4>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
          <% if @option_set.standard_copy? %>
            <%= data_integrity_warning(:option_standard_copy_name_change_warning) %>
          <% end %>

          <%# this warning will get hidden/shown by the js %>
          <%= data_integrity_warning(:option_in_use_name_change_warning) %>

          <div>
            <% configatron.preferred_locales.each do |locale| %>
              <div class="translation form-group row">
                <label for="option_name_<%= locale %>" class="col-md-3 col-form-label">
                  <%= language_name(locale) %>
                </label>
                <div class="col-md-9">
                  <input type="text" class="form-control" id="option_name_<%= locale %>"
                    data-locale="<%= locale %>" maxlength="<%= Option::MAX_NAME_LENGTH %>">
                </div>
              </div>
            <% end %>
            <div class="coordinate form-group row">
              <label for"option_latitude" class="col-md-3 col-form-label">
                <%= t('option_set.latitude') %>
              </label>
              <div class="col-md-9">
                <input type="number" step="any" class="form-control"
                  id="option_latitude" data-field="latitude">
              </div>
            </div>
            <div class="coordinate form-group row">
              <label for"option_latitude" class="col-md-3 col-form-label">
                <%= t('option_set.longitude') %>
              </label>
              <div class="col-md-9">
                <input type="number" step="any" class="form-control"
                  id="option_longitude" data-field="longitude">
              </div>
            </div>
            <div class="form-group row">
              <label for="option_value" class="col-md-3 col-form-label"><%= t('option_set.value') %></label>
              <div class="col-md-9">
                <input type="number" class="form-control" id="option_value" data-field="value">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            <%= I18n.t("common.cancel") %>
          </button>
          <button type="button" class="btn btn-primary buttons-default">
            <%= I18n.t("common.save") %>
          </button>
          <button type="button" class="btn btn-secondary buttons-new" data-action="close">
            <%= I18n.t("common.save_and_close") %>
          </button>
          <button type="button" class="btn btn-primary buttons-new" data-action="another">
            <%= I18n.t("common.save_and_add_another") %>
          </button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>
