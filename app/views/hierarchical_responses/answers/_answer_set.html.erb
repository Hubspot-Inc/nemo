<% mode = read_only ? "read_only" : "editable" %>
<div class="form-field answer_field qtype_<%= set.questioning.qtype.name %>
  <%= read_only ? "read-only" : "editable" %> <%= set.children.any?(&:lengthy?) ? "lengthy" : "" %>">

  <% unless read_only %>
    <%= hidden_field_tag input_name(path + ["id"]), set.id %>
    <%= hidden_field_tag input_name(path + ["type"]), "AnswerSet" %>
    <%= hidden_field_tag input_name(path + ["questioning_id"]), set.questioning_id %>
  <% end %>

  <%= render("hierarchical_responses/answers/answer_info", node: set) %>

  <div class="children">
    <div class="control">
      <%= render("hierarchical_responses/answers/cascading_#{mode}",
            answer_set: set,
            path: path + ["children"]) %>
    </div>
  </div>
</div>
