<% nodes.each do |node| %>
  <% if node.is_a?(AnswerSet) %>
    <%= render("hierarchical_responses/answers/set", set: node, read_only: read_only) %>
  <% elsif node.is_a?(AnswerGroup) %>
    <%= render("hierarchical_responses/answers/group", group: node, read_only: read_only) %>
  <% elsif node.is_a?(Answer) %>
    <%= render("hierarchical_responses/answers/answer", answer: node, read_only: read_only) %>
  <% elsif node.is_a?(AnswerGroupSet) %>
    <%= render("hierarchical_responses/answers/nodes", nodes: node.c) %>
  <% end %>
<% end %>
