<% prefix = "#{prefix}[choices_attributes][#{choice_counter}]" %>
<%= hidden_field_tag("#{prefix}[id]", choice.id) unless choice.new_record? %>

<%# Always include this so Condition JS can find it. %>
<%= hidden_field_tag("#{prefix}[option_node_id]", choice.option_node_id) %>

<%# Ensures 0 gets passed if box not checked %>
<%# Need to set id: nil or there would be a duplicate ID %>
<%= hidden_field_tag("#{prefix}[checked]", 0, id: nil) %>

<%= check_box_tag("#{prefix}[checked]", 1, choice.checked?) %>
<%= label_tag("#{prefix}[checked]", choice.option_name) %><br/>
