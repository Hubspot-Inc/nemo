<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Form 1</h:title>
    <model>
      <instance>
        <data id="*form1*" version="*formver1*">
          <*grpcode2*>
            <*grpcode2*-header/>
            <*qcode1*/>
            <*qcode2*/>
            <*qcode3*/>
          </*grpcode2*>
        </data>
      </instance>
      <itext>
        <translation lang="English">
          <text id="*grpcode2*-header:label">
            <value>Group Name</value>
          </text>
          <text id="*grpcode2*-header:hint">
            <value>Group Hint</value>
          </text>
          <text id="*qcode1*:label">
            <value>Text Question Title 1</value>
          </text>
          <text id="*qcode1*:hint">
            <value>Question Hint 1</value>
          </text>
          <text id="*qcode2*:label">
            <value>Text Question Title 2</value>
          </text>
          <text id="*qcode2*:hint">
            <value>Question Hint 2</value>
          </text>
          <text id="*qcode3*:label">
            <value>Text Question Title 3</value>
          </text>
          <text id="*qcode3*:hint">
            <value>Question Hint 3</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/*grpcode2*"/>
      <bind nodeset="/data/*grpcode2*/*grpcode2*-header" readonly="true()" type="string"/>
      <bind nodeset="/data/*grpcode2*/*qcode1*" type="string"/>
      <bind nodeset="/data/*grpcode2*/*qcode2*" type="string"/>
      <bind nodeset="/data/*grpcode2*/*qcode3*" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group>
      <label>Group Name</label>
      <group appearance="field-list">
        <input ref="/data/*grpcode2*/*grpcode2*-header">
          <hint ref="jr:itext('*grpcode2*-header:hint')"/>
        </input>
        <input ref="/data/*grpcode2*/*qcode1*">
          <label ref="jr:itext('*qcode1*:label')"/>
          <hint ref="jr:itext('*qcode1*:hint')"/>
        </input>
        <input ref="/data/*grpcode2*/*qcode2*">
          <label ref="jr:itext('*qcode2*:label')"/>
          <hint ref="jr:itext('*qcode2*:hint')"/>
        </input>
        <input ref="/data/*grpcode2*/*qcode3*">
          <label ref="jr:itext('*qcode3*:label')"/>
          <hint ref="jr:itext('*qcode3*:hint')"/>
        </input>
      </group>
    </group>
  </h:body>
</h:html>
