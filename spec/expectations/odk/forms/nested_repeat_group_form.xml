<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Form 1</h:title>
    <model>
      <instance>
        <data id="*form1*" version="*formver1*">
          <*itemcode1* jr:template="">
            <*itemcode1*-header/>
            <*itemcode2*/>
            <*itemcode3*/>
            <*itemcode4* jr:template="">
              <*itemcode4*-header/>
              <*itemcode5*/>
              <*itemcode6*/>
            </*itemcode4*>
            <*itemcode7*/>
          </*itemcode1*>
          <*itemcode8*/>
          <*itemcode10* jr:template="">
            <*itemcode10*-header/>
            <*itemcode11*/>
          </*itemcode10*>
        </data>
      </instance>
      <itext>
        <translation lang="English">
          <text id="*itemcode1*-header:label">
            <value>Repeat Group 1</value>
          </text>
          <text id="*itemcode1*-header:hint">
            <value>Repeat Group 1</value>
          </text>

          <text id="*itemcode4*-header:label">
            <value>Repeat Group A</value>
          </text>
          <text id="*itemcode4*-header:hint">
            <value>Repeat Group A</value>
          </text>

          <text id="*itemcode10*-header:label">
            <value>Repeat Group 2</value>
          </text>
          <text id="*itemcode10*-header:hint">
            <value>Repeat Group 2</value>
          </text>

          <text id="*itemcode2*:label">
            <value>Text Question Title 1</value>
          </text>
          <text id="*itemcode2*:hint">
            <value>Question Hint 1</value>
          </text>
          <text id="*itemcode3*:label">
            <value>Text Question Title 2</value>
          </text>
          <text id="*itemcode4*:hint">
            <value>Question Hint 2</value>
          </text>
          <text id="q3:label">
            <value>Integer Question Title 3</value>
          </text>
          <text id="q3:hint">
            <value>Question Hint 3</value>
          </text>
          <text id="q4:label">
            <value>Integer Question Title 4</value>
          </text>
          <text id="q4:hint">
            <value>Question Hint 4</value>
          </text>
          <text id="q5:label">
            <value>Long Text Question Title 5</value>
          </text>
          <text id="q5:hint">
            <value>Question Hint 5</value>
          </text>
          <text id="q6:label">
            <value>Text Question Title 6</value>
          </text>
          <text id="q6:hint">
            <value>Question Hint 6</value>
          </text>
          <text id="q7:label">
            <value>Text Question Title 7</value>
          </text>
          <text id="q7:hint">
            <value>Question Hint 7</value>
          </text>

        </translation>

      </itext>
      <bind nodeset="/data/grp-2"/>
      <bind nodeset="/data/grp-2/grp-header2" readonly="true()" type="string"/>
      <bind nodeset="/data/grp-2/q1" type="string"/>

      <bind nodeset="/data/grp-2/q2" type="string"/>

      <bind nodeset="/data/grp-2/grp-5"/>
      <bind nodeset="/data/grp-2/grp-5/grp-header5" readonly="true()" type="string"/>
      <bind nodeset="/data/grp-2/grp-5/q3" type="int"/>
      <bind nodeset="/data/grp-2/grp-5/q4" type="int"/>

      <bind nodeset="/data/grp-2/q5" type="string"/>

      <bind nodeset="/data/q6" type="string"/>

      <bind nodeset="/data/grp-10"/>
      <bind nodeset="/data/grp-10/grp-header10" readonly="true()" type="string"/>
      <bind nodeset="/data/grp-10/q7" type="string"/>

    </model>
  </h:head>
  <h:body>
    <group>
      <label>Repeat Group 1</label>
      <repeat nodeset="/data/grp-2">
        <group>
          <input ref="/data/grp-2/grp-header2">
            <hint ref="jr:itext('grp-header2:hint')"/>
          </input>

          <input ref="/data/grp-2/q1">
            <label ref="jr:itext('q1:label')"/>

            <hint ref="jr:itext('q1:hint')"/>

          </input>

          <input ref="/data/grp-2/q2">
            <label ref="jr:itext('q2:label')"/>

            <hint ref="jr:itext('q2:hint')"/>

          </input>

          <group>
            <label>Repeat Group A</label>
            <repeat nodeset="/data/grp-2/grp-5">
              <group appearance="field-list">
                <input ref="/data/grp-2/grp-5/grp-header5">
                  <hint ref="jr:itext('grp-header5:hint')"/>
                </input>

                <input ref="/data/grp-2/grp-5/q3">
                  <label ref="jr:itext('q3:label')"/>

                  <hint ref="jr:itext('q3:hint')"/>

                </input>

                <input ref="/data/grp-2/grp-5/q4">
                  <label ref="jr:itext('q4:label')"/>

                  <hint ref="jr:itext('q4:hint')"/>

                </input>

              </group>
            </repeat>
          </group>

          <input ref="/data/grp-2/q5" rows="5">
            <label ref="jr:itext('q5:label')"/>

            <hint ref="jr:itext('q5:hint')"/>

          </input>

        </group>
      </repeat>
    </group>

    <input ref="/data/q6">
      <label ref="jr:itext('q6:label')"/>

      <hint ref="jr:itext('q6:hint')"/>

    </input>

    <group>
      <label>Repeat Group 2</label>
      <repeat nodeset="/data/grp-10">
        <group appearance="field-list">
          <input ref="/data/grp-10/grp-header10">
            <hint ref="jr:itext('grp-header10:hint')"/>
          </input>

          <input ref="/data/grp-10/q7">
            <label ref="jr:itext('q7:label')"/>

            <hint ref="jr:itext('q7:hint')"/>

          </input>

        </group>
      </repeat>
    </group>

  </h:body>
</h:html>
