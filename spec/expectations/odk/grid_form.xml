<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Form 1</h:title>
    <model>
      <instance>
        <data id="1" version="abc">
          <grp2>
            <grp2-header/>
            <q1/>
            <q2/>
          </grp2>
        </data>
      </instance>
      <itext>
        <translation lang="English">
          <text id="grp2-header:label">
            <value>Group Name</value>
          </text>
          <text id="grp2-header:hint">
            <value>Group Hint</value>
          </text>
          <text id="q1:label">
            <value>Select One Question Title 1</value>
          </text>
          <text id="q1:hint">
            <value>Question Hint 1</value>
          </text>
          <text id="q2:label">
            <value>Select One Question Title 2</value>
          </text>
          <text id="q2:hint">
            <value>Question Hint 2</value>
          </text>
          <text id="on2">
            <value>Cat</value>
          </text>
          <text id="on3">
            <value>Dog</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/grp2"/>
      <bind nodeset="/data/grp2/grp2-header" readonly="true()" type="string"/>
      <bind nodeset="/data/grp2/q1" type="select1"/>
      <bind nodeset="/data/grp2/q2" type="select1"/>
    </model>
  </h:head>
  <h:body>
    <group>
      <label>Group Name</label>
      <group appearance="field-list">
        <input ref="/data/grp2/grp2-header">
          <hint ref="jr:itext('grp2-header:hint')"/>
        </input>
        <select1 appearance="label" ref="/data/grp2/q1">
          <label/>
          <item>
            <label ref="jr:itext('on2')"/>
            <value>on2</value>
          </item>
          <item>
            <label ref="jr:itext('on3')"/>
            <value>on3</value>
          </item>
        </select1>
        <select1 appearance="list-nolabel" ref="/data/grp2/q1">
          <label ref="jr:itext('q1:label')"/>
          <item>
            <label ref="jr:itext('on2')"/>
            <value>on2</value>
          </item>
          <item>
            <label ref="jr:itext('on3')"/>
            <value>on3</value>
          </item>
        </select1>
        <select1 appearance="list-nolabel" ref="/data/grp2/q2">
          <label ref="jr:itext('q2:label')"/>
          <item>
            <label ref="jr:itext('on2')"/>
            <value>on2</value>
          </item>
          <item>
            <label ref="jr:itext('on3')"/>
            <value>on3</value>
          </item>
        </select1>
      </group>
    </group>
  </h:body>
</h:html>
